pipeline{
    agent none
    stages{
        stage('Example'){
            steps{
                echo 'hello world'
            }
        }
        stage('feature'){
            when{
                beforeAgent true
                branch 'feature'
            }
            steps{
                echo 'feature branch'
            }
        }

        stage('master'){
                when{
                    beforeAgent true
                    branch 'master'
               }
              steps{
                    echo 'master branch'
              }
        }
    }
}